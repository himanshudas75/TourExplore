{
    "name": "tourexplore",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "server": "node index.js",
        "server-dev": "nodemon index.js",
        "client": "npm run preview --prefix client",
        "client-dev": "npm run dev --prefix client",
        "dev": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
        "build": "npm install --prefix client && npm run build --prefix client",
        "stop": "pm2 stop TourExplore; pm2 delete TourExplore",
        "prod": "npm install && npm run stop; NODE_ENV=production pm2 start index.js --name TourExplore",
        "prod-render": "npm install && NODE_ENV=production node index.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.2",
        "bcrypt": "^5.1.1",
        "cities.json": "^1.1.31",
        "cloudinary": "^1.41.0",
        "concurrently": "^8.2.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "countries-list": "^3.0.6",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.3",
        "multer": "^1.4.5-lts.1",
        "multer-storage-cloudinary": "^4.0.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "sanitize-html": "^2.11.0"
    }
}
